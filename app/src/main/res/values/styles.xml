<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OutlinedBoxRoundedCorner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="baseStyle">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="H1" parent="baseStyle">
        <item name="android:textSize">@dimen/H1</item>
    </style>

    <style name="H2" parent="baseStyle">
        <item name="android:textSize">@dimen/H2</item>
    </style>

    <style name="H3" parent="baseStyle">
        <item name="android:textSize">@dimen/H3</item>
    </style>

</resources>
